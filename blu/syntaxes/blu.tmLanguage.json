{
	"name": "Blu",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#identifiers" },
		{ "include": "#numbers" },
		{ "include": "#strings" },
		{ "include": "#strings-single" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "//",
					"end": "\n",
					"name": "comment.line.double-slash"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.blu",
				"match": "\\b(if|then|else|for|let|mut|rec|explicit|to|import|export|clone|print|len|true|false|object|return)\\b"
			}]
		},
		"identifiers": {
			"patterns": [{
				"match": "([[:alpha:]0-9_]+)",
				"captures": {
					"0": {
						"name": "entity.name.blu"
					}
				}
			}]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "[0-9]"
				},
				{
					"name": "constant.numeric.float",
					"match": "[0-9]+(\\.[0-9]+)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.blu",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.blu",
					"match": "\\\\."
				}
			]
		},
		"strings-single": {
			"name": "string.quoted.single.blu",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.blu",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.blu"
}